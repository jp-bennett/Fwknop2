<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button android:id="@+id/btn_send" android:layout_alignParentBottom="true"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:text="@string/menu_send_knock"
        android:visibility="invisible"
        />
    <ListView android:id="@android:id/list" android:layout_alignParentTop="true" android:layout_above="@id/btn_send"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        />
</RelativeLayout>